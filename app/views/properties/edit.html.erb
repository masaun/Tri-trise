<h1>物件編集</h1>
<%= form_for :property, url: property_path, method: :patch do |f| %>

  <p>
    <%= f.label :property_name, "物件名" %><br>
    <%= f.text_field :property_name %>
  </p>

  <p>
    <%= f.label :rent, "賃料" %><br>
    <%= f.text_field :rent %> 円
  </p>

  <p>
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :age, "築年数" %><br>
    <%= f.text_field :age %> 年
  </p>

  <p>
    <%= f.label :remarks, "備考" %><br>
    <%= f.text_area :remarks %>
  </p>

  <hr>

  <h2>最寄り駅1</h2>
    <p>
      <%= f.label :line_name_1, "路線名" %><br>
      <%= f.text_field :line_name_1 %>
    </p>

    <p>
      <%= f.label :station_name_1, "駅名" %><br>
      <%= f.text_field :station_name_1 %>
    </p>

    <p>
      <%= f.label :walk_fraction_1, "徒歩分数" %><br>
      <%= f.text_field :walk_fraction_1 %> 分
    </p>

  <h2>最寄り駅2</h2>
    <p>
      <%= f.label :line_name_2, "路線名" %><br>
      <%= f.text_field :line_name_2 %>
    </p>

    <p>
      <%= f.label :station_name_2, "駅名" %><br>
      <%= f.text_field :station_name_2 %>
    </p>

    <p>
      <%= f.label :walk_fraction_2, "徒歩分数" %><br>
      <%= f.text_field :walk_fraction_2 %> 分
    </p>

  <p>
    <%= f.submit '更新する' %>
  </p>
<% end %>

<%= link_to '詳細', property_path(@property) %>
| <%= link_to '戻る', properties_path %>